<li class="nav-item nav-item-has-children group-item" data-sidebar-target="groupList" data-controller="<%= @controller %>">
  <a
    href="#0"
    class="<%= @class %>"
    data-bs-toggle="collapse"
    data-bs-target="#ddmenu_<%= @identifier %>"
    aria-controls="ddmenu_<%= @identifier %>"
    aria-expanded="true"
    aria-label="Toggle navigation"
    data-<%= @controller %>-target="title">
              <span class="icon">
                <i class="lni mr-10 lni-<%= @icon %>"></i>
              </span>
    <span data-sidebar-target="linkTitle"><%= @title %></span>
  </a>
  <ul id="ddmenu_<%= @identifier %>" class="collapse dropdown-nav" data-<%= @controller %>-target="list">
    <% links.each do |link| %>
      <%= link %>
    <% end %>
  </ul>
</li>
