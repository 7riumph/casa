<%= link_to 'Back', root_path %>

<h1>Editing Volunteer</h1>

<br>

<% if @volunteer.casa_cases %>
  <table class="table case-list" id="casa_cases">
    <thead>
      <tr>
        <th>Case Number</th>
        <th>Transition Aged Youth</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @volunteer.case_assignments.each do |assignment| %>
        <tr>
          <td><%= assignment.casa_case.case_number %></td>
          <td><%= assignment.casa_case.transition_aged_youth %></td>
          <td><%= button_to 'Unassign Case', assignment, method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
<br>

<div class="row">
  <div class="col-sm-6">
    <h3>Assign to New Case</h3>

    <%= form_for CaseAssignment.new, url: case_assignments_path do |form| %>

      <div class="form-group">
        <%= form.label :casa_case_id %>
        <%= form.text_field :casa_case_id, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :volunteer_id %>
        <%= form.text_field :volunteer_id, class: "form-control" %>
      </div>

      <%= form.submit "Assign", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
