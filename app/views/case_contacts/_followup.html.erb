<% if followup %>
  <% if followup.requested? %>
    <div class="col-sm-2 pt-2">
      <i class="fas fa-lg <%= followup_icon(followup.creator) %>"></i>
    </div>
    <div class="col-sm-5">
      <%= button_to case_contact_followups_path(contact), class: "btn btn-success" do %>
        Resolve
      <% end %>
    </div>
  <% end %>
<% else %>
  <%= link_to 'Follow up', case_contact_followups_path(contact), method: "post", class: "btn btn-danger" %>
<% end %>
