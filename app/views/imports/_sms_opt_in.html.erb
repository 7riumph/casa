<div class="modal fade" id="smsOptIn" tabindex="-1" role="dialog" aria-labelledby="smsOptInLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="smsOptIn">
          <%= t(".sms_opt_in.title") %>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div>
          <%= t(".sms_opt_in.description") %>
        </div>
        <span>
          <input type="checkbox" />
          <%= t(".sms_opt_in.label") %>
        <span>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal"><%= t(".sms_opt_in.continue") %></button>
      </div>
    </div>
  </div>
</div>