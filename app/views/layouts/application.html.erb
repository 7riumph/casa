<!DOCTYPE html>
<html>
  <head>
    <title><%= translate('page.meta.title') %></title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= render 'shared/favicons' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% if all_casa_admin_signed_in? %>
      <%= javascript_pack_tag 'all_casa_admin', 'data-turbolinks-track': 'reload' %>
      <%= stylesheet_pack_tag 'all_casa_admin', 'data-turbolinks-track': 'reload' %>
    <% end %>
  </head>
  <body class="<%= body_class %>">
    <% if logged_in? %>
      <%= render 'layouts/mobile_navbar' %>
      <%= render 'layouts/sidebar' %>
      <div class="container-fluid">
        <div class="content">
          <%= render 'layouts/flash_messages' %>
          <%= yield %>
        </div>
      </div>
    <% else %>
      <%= render 'layouts/login_header' %>
      <%= render 'layouts/flash_messages' %>
      <%= yield %>
      <%= render 'layouts/footers/not_logged_in' %>
    <% end%>
    </div>
  </body>
</html>
